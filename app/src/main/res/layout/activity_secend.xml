        android:textSize="25sp" />

    <TextView
        android:id="@+id/nfc_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25sp" />
</LinearLayout>